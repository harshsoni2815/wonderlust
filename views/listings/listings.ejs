<style>
    .card{
        margin: auto;
        border: none;
        padding: .5rem .1rem;
    }
    .card-img-top{
        height: 15rem;
    }
    
</style>

<% layout("/layout/boilerplate")%>
<div class="row">
  
    
        
        <% for (const data of allListing) { %>
            <div class="card listing-card cols" style="width: 18rem;">
                <img src="<%=data.image%>" class="card-img-top" alt="...">
                <div class="card-body">
                  <h5 class="card-title"><%= data.title%></h5>
                  <h5 class="card-title">&#8377;<%= data.price.toLocaleString("en-IN")%>/Night</h5>
                  
                  <a href="/listing/<%=data._id%>" class="btn btn-primary">view</a>
                  
                </div>
              </div>

            <%} %>
            

</div>
    

    


